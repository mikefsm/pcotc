.container
  .clearfix
    %h1
      .pull-left Officers!

      .pull-right
        = link_to 'Add New', new_officer_path, class: 'btn btn-default'


  .row
    - @officers.each do |officer|
      .col-lg-3
        .panel.panel-default
          .panel-heading
            %h4
              = link_to officer.full_name, officer_path(officer)
              %small= officer.office_name.titleize